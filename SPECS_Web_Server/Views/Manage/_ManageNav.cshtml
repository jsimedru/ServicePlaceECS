@using SPECS_Web_Server.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<!DOCTYPE html>
<html>
<head>
    <style>
        ul.v {
            list-style-type: none;
            margin: 5px;
            padding: 5px;
            width: 250px;
        }

        li a {
            display: block;
            padding: 30px 25px;
            text-decoration: dashed;
            font-weight: bold;
            text-align: center;
            color: #FF9900;
            font-size: 150%;
        }
        li { /*changes box borders*/
            border-radius: 25px;
            text-align: center;
        }

            /* Change the link color on hover */
            li a:hover {
                background-color: #008CBA;
                color: white;
                border-bottom: 1px;
                border-radius: 25px;
            }
        .active {
            background-color: #FFD800;
        }
    </style>
</head>

<body>
    <ul class="v">
        <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-action="Index">Profile</a></li>
        <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a asp-action="ChangePassword">Password</a></li>
        @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a asp-action="ExternalLogins">External logins</a></li>
}
        <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
        <li class="@ManageNavPages.FulfillmentNavClass(ViewContext)"><a asp-action="Fulfillment">Fulfillment History</a></li>
        <li class="@ManageNavPages.DevicesNavClass(ViewContext)"><a asp-action="Devices">Devices</a></li>
    </ul>
</body>
</html>


