@model AdminIndexViewModel
@{
    ViewData["Title"] = "All Users";
    ViewData.AddActivePage(AdminNavPages.Index);
}


<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #ffff99;
        }
    </style>
</head>

<body>
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <center><h3>@ViewData["Title"]</h3></center><br />
        @if (Model.Users?.Count > 0)
        {
            <h4>Users</h4>
            <table class="table">
                <tbody>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>Medical Conditions</th>
                        <th>Preferred Doctor</th>
                    </tr>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Address1</td>
                            <td>@user.MedicalConditions</td>
                            <td>@user.PreferredDoctor</td>
                        </tr>
                    }
                </tbody>
            </table>    
        }

</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
